<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_salon_service"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <ImageView
                android:id="@+id/salon_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/txt_sale_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 20%"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/red"
                android:padding="5dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/my_text_view_bg"
                android:text="Đặt ngay"
                android:textSize="10dp"
                android:textColor="@color/red"
                android:clickable="false"
                />

            <TextView
                android:id="@+id/salon_service_name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="Service name"
                android:textSize="15dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_gravity=""/>



        </LinearLayout>




        <TextView
            android:id="@+id/salon_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Address"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/locaton_icon"/>


    </LinearLayout>

</android.support.v7.widget.CardView>