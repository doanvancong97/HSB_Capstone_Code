<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_salon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailSalonActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_logo"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"
                            android:src="@drawable/logo_tran"
                            android:paddingLeft="10dp"

                            />


                        />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtSalonName"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="bottom"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textSize="25dp"
                                android:textStyle="italic|bold"


                                app:fontFamily="serif" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"

                                android:layout_weight="1">


                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    android:paddingLeft="25dp"

                                    app:srcCompat="@drawable/star" />

                                <TextView
                                    android:id="@+id/txtRating"
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="7"
                                    android:text="4.5"
                                    android:textSize="12dp" />


                            </LinearLayout>


                            />


                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        android:background="#6969"
                        android:scaleType="centerCrop"

                        />

                    <TextView
                        android:id="@+id/txt_salon_service_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"

                        android:text=" Service name"
                        android:textColor="#c70000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/txt_service_sale_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingRight="10dp"
                            android:gravity="center|right"
                            android:text="sale price"
                            android:textSize="20dp"
                            android:textColor="@color/red"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_salon_service_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingRight="15dp"
                            android:gravity="center|left"
                            android:text="Price"
                            android:textSize="15dp"
                            android:textColor="@color/fadeGray"
                             />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Địa chỉ áp dụng: "


                            android:textSize="12dp" />

                        <Spinner

                            android:id="@+id/spAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"


                            />


                    </LinearLayout>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/my_text_view_bg"
                    android:padding="5dp"
                    android:text="Các dịch vụ khác của cửa hàng:"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                   <android.support.v7.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/recycler_view_more_service"
                       >


                   </android.support.v7.widget.RecyclerView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"

                            android:text="Chọn ngày và giờ"



                            android:textSize="14dp" />


                    </LinearLayout>

                    <!--<com.github.badoualy.datepicker.DatePickerTimeline-->
                        <!--android:id="@+id/timeline"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--app:mti_primaryColor="@color/red2"-->



                        <!--/>-->

                    <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
                        android:id="@+id/datePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:scrollbars="none">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >

                            <Button
                                android:id="@+id/btn1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_time"
                                android:text="9:00"
                                android:textColor="#DB1507"


                                />

                            <Button
                                android:id="@+id/btn2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_time"
                                android:text="10:00"
                                android:textColor="#DB1507"

                                />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_time"
                                android:text="11:00"
                                android:textColor="#DB1507"


                                />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_time"
                                android:text="12:00"
                                android:textColor="#DB1507"


                                />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_time"
                                android:text="13:00"
                                android:textColor="#DB1507"


                                />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/button_time"
                                android:text="14:00"
                                android:textColor="#DB1507" />
                        </LinearLayout>

                    </HorizontalScrollView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_time_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/my_text_view_bg"
                        android:padding="5dp"
                        android:text="Điều kiện áp dụng:"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.borjabravo.readmoretextview.ReadMoreTextView

                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:colorClickableText="#2644EB"
                        app:trimLines="6"
                        android:layout_margin="5dp"
                        />




                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>




    </ScrollView>




    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_shape"
        android:onClick="clickToConfirm"
        android:text="XÁC NHẬN"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />



</RelativeLayout>
