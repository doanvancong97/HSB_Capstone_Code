<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailServiceActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_logo"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"
                            android:paddingLeft="10dp"
                            android:src="@drawable/logo_tran"

                            />


                        />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtSalonName"
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                android:gravity="bottom"
                                android:paddingLeft="10dp"
                                android:text=""
                                android:textSize="25dp"
                                android:textStyle="italic|bold"


                                app:fontFamily="serif" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="0dp"

                                android:layout_weight="1"/>


                            />


                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"

                        android:background="#6969"
                        android:scaleType="fitXY"

                        />

                    <TextView
                        android:id="@+id/txt_salon_service_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"

                        android:text=" Service name"
                        android:textColor="#c70000"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_salon_service_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:paddingRight="15dp"
                            android:text="Price"
                            android:textColor="@color/fadeGray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/txt_service_sale_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:paddingRight="10dp"
                            android:text="sale price"
                            android:textColor="@color/red"
                            android:textSize="20dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:background="@drawable/my_text_view_bg"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="Địa chỉ áp dụng: "
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            />

                        <!--<Spinner-->

                        <!--android:id="@+id/spAddress"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="2"-->


                        <!--/>-->
                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|left"
                            android:text="Địa chỉ "
                            android:textSize="15dp"
                            android:textColor="@color/black"/>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/my_text_view_bg"
                        android:padding="5dp"
                        android:text="Các dịch vụ khác của cửa hàng:"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_more_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/my_text_view_bg"
                            android:padding="5dp"
                            android:text="Chọn ngày và giờ:"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <!--<com.github.badoualy.datepicker.DatePickerTimeline-->
                    <!--android:id="@+id/timeline"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:mti_primaryColor="@color/red2"-->


                    <!--/>-->

                    <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
                        android:id="@+id/datePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:scrollbars="none">


                        <LinearLayout
                            android:id="@+id/linearTimePicker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </HorizontalScrollView>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view_time_slot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/my_text_view_bg"
                        android:padding="5dp"
                        android:text="Điều kiện áp dụng:"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <com.borjabravo.readmoretextview.ReadMoreTextView

                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:colorClickableText="#2644EB"
                        app:trimLines="6" />


                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </LinearLayout>


    </ScrollView>


    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/button_shape"
        android:text="Tiếp tục"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed-medium"/>


</RelativeLayout>
